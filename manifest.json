{
    "name": "ChromePHP",
    "version": "0.1471",
    "content_scripts": [
        {
            "matches": ["http://*/*", "https://*/*"],
            "js": ["log.js"]
        }
    ],
    "background_page": "background.html",
    "options_page": "options.html",
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "description": "For PHP logging and debugging in chrome console.",
    "browser_action": {
        "default_icon": "icon48_disabled.png",
        "default_title": "ChromePHP 0.1471"
    },
    "permissions":
    [
      "tabs",
      "http://*/*",
      "https://*/*"
    ]
}
